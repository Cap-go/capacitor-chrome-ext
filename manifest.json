{
  "manifest_version": 3,
  "name": "Capacitor Safe Area Simulator",
  "version": "1.0",
  "description": "Simulates safe areas for Capacitor apps on the web",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.ts"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
